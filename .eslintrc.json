{
  "extends": [
    "standard",
    "standard-react",
    "plugin:react/recommended"
  ],
  "plugins": [
    "react-hooks"
  ],
  "rules": {
    "react-hooks/rules-of-hooks": 2,
    "react-hooks/exhaustive-deps": 1,
    "react/jsx-handler-names": 0,
    "react/react-in-jsx-scope": 0,
    "react/sort-comp": [2, {
      "order": [
        "static-methods",
        "static-variables",
        "instance-variables",
        "lifecycle",
        "everything-else",
        "rendering"
      ],
      "groups": {
        "rendering": [
          "/^render.+$/",
          "render"
        ]
      }
    }]
  }
}
